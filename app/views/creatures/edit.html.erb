<!-- app/views/creatures/edit.html.erb -->

<form action="/creatures/<%= @creature.id %>" method="post">
	<input type="hidden" name="_method" value="put">
	<label>Name</label></br>
	<input type="text" name="creature[name]" value="<%= @creature.name %>"></br>
	<label>Description</label></br>
	<textarea name="creature[description]"><%= @creature.description %></textarea><br>
	<%= token_tag form_authenticity_token %>
 
	<button> Update! </button>
</form>
